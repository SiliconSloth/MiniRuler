package siliconsloth.miniruler.rules;
dialect  "mvel"

import siliconsloth.miniruler.TitleSelection;

rule "Title Select"
    when
        TitleSelection(option : option)
    then
        System.out.println(option);
end

rule "Title Close"
    when
        not TitleSelection()
    then
        System.out.println("Bye!");
end
